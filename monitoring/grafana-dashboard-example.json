{
  "dashboard": {
    "title": "Gestion Notes - Monitoring",
    "panels": [
      {
        "title": "Utilisateurs Total",
        "type": "stat",
        "targets": [
          {
            "expr": "app_users_total",
            "legendFormat": "Utilisateurs"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "unit": "short"
          }
        }
      },
      {
        "title": "RequÃªtes HTTP/sec",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(http_requests_total[5m])",
            "legendFormat": "{{method}} {{status}}"
          }
        ]
      },
      {
        "title": "Connexions MySQL",
        "type": "gauge",
        "targets": [
          {
            "expr": "mysql_connections_active",
            "legendFormat": "Connexions"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "min": 0,
            "max": 100,
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 50},
                {"color": "red", "value": 80}
              ]
            }
          }
        }
      }
    ],
    "time": {"from": "now-1h", "to": "now"},
    "refresh": "30s"
  }
}
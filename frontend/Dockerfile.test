# Dockerfile simplifié sans build
FROM nginx:alpine

# Créer un index.html simple pour tester
RUN echo '<html><body><h1>Frontend Gestion Notes</h1><p>Application en cours...</p></body></html>' > /usr/share/nginx/html/index.html

# Configuration nginx simple
RUN echo 'server { listen 80; root /usr/share/nginx/html; index index.html; location / { try_files $uri $uri/ /index.html; } }' > /etc/nginx/conf.d/default.conf

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]